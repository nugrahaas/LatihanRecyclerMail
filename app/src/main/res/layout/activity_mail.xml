<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="10dp"
    android:paddingTop="10dp"
    android:paddingRight="2dp"
    android:paddingLeft="2dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">
            <RelativeLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/iv_profpic"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/rounded_drawable"
                    android:text="S"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:gravity="center"


                    />
                <TextView
                    android:id="@+id/tv_prof_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="S"
                    android:layout_centerHorizontal="true"
                    android:textColor="#fff"
                    android:textSize="25dp"
                    android:textStyle="bold"

                    />
            </RelativeLayout>
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="220dp"

                android:layout_height="match_parent">
                <TextView
                    android:layout_gravity="left"
                    android:id="@+id/tv_sender_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sam"
                    android:textSize="20sp"/>
                <TextView
                    android:layout_gravity="left"
                    android:id="@+id/tv_subject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:text="Subject"
                    android:textSize="20sp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_gravity="left"
                    android:id="@+id/tv_isi_mail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:text="Contain"
                    android:textSize="20sp" />
            </LinearLayout>
            <android.support.constraint.ConstraintLayout
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_jam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10:42am"
                    android:textSize="20sp"
                    tools:ignore="MissingConstraints" />
                <ImageButton
                    android:onClick="starClick"
                    android:id="@+id/tv_star"
                    app:layout_constraintTop_toBottomOf="@id/tv_jam"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:background="@drawable/ic_star_black_24dp"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    tools:ignore="MissingConstraints" />
            </android.support.constraint.ConstraintLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>